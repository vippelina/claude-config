      "apiKey": "VhOGAoUOE5_BMzu-phDORdyXHNMcDRBxvndK_Uop",
      "healthCheckTimeout": 3000,
      "useDetailedHealthCheck": true
    },
    "mcp": {
      "serverCommand": [
        "uv",
        "run",
        "memory",
        "server",
        "-s",
        "hybrid"
      ],
      "serverWorkingDir": "/Users/vibeke.tengroth/Library/Mobile Documents/com~apple~CloudDocs/AI/mcp-memory-service",
      "connectionTimeout": 2000,
      "toolCallTimeout": 3000
    },
    "defaultTags": [
      "claude-code",
      "auto-generated"
